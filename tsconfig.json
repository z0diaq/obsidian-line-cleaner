{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"declaration": true,
		"outDir": "./",
		"typeRoots": [
			"node_modules/@types"
		],
		"lib": [
			"DOM",
			"ES6"
		]
	},
	"include": [
		"**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
